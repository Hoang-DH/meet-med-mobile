<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.homeContainer.profile.ProfileFragment">

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_30dp"
            android:text="@string/string_profile"
            android:textColor="@color/color_1C2A3A"
            android:textSize="@dimen/common_text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/flAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProfile"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAvatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/common_size_20dp"
                android:src="@drawable/ic_profile_pic"
                android:scaleType="centerCrop" />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/color_primary"/>

        </FrameLayout>




        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1C2A3A"
            android:textSize="@dimen/common_text_size_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/flAvatar"
            app:layout_constraintStart_toStartOf="@id/flAvatar"
            app:layout_constraintTop_toBottomOf="@id/flAvatar"
            tools:text="Do Huy Hoang" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_10dp"
            app:layout_constraintTop_toBottomOf="@id/tvFullName"
            app:layout_constraintStart_toStartOf="@id/tvFullName"
            app:layout_constraintEnd_toEndOf="@id/tvFullName"
            android:textColor="@color/color_6b7280"
            tools:text="0352183569"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditProfile"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
            android:layout_marginTop="@dimen/common_size_15dp"
            android:drawableStart="@drawable/ic_edit_profile"
            android:text="@string/string_edit_profile"
            android:textColor="@color/color_6b7280"
            android:drawableEnd="@drawable/ic_next_disabled"
            android:drawablePadding="@dimen/common_size_15dp"
            android:textSize="@dimen/common_text_size_16sp"
            android:gravity="center_vertical"
            />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvEditProfile"
            android:layout_marginTop="@dimen/common_size_10dp"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:background="@color/color_divider"
