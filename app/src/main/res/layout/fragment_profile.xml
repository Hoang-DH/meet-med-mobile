<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.homeContainer.profile.ProfileFragment">

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_30dp"
            android:text="@string/string_profile"
            android:textColor="@color/color_1C2A3A"
            android:textSize="@dimen/common_text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAvatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/common_size_20dp"
            android:src="@drawable/ic_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProfile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_avatar"
            android:translationX="-50dp"
            android:translationY="-65dp"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1C2A3A"
            android:textSize="@dimen/common_text_size_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            tools:text="Do Huy Hoang" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_10dp"
            app:layout_constraintTop_toBottomOf="@id/tvFullName"
            app:layout_constraintStart_toStartOf="@id/tvFullName"
            app:layout_constraintEnd_toEndOf="@id/tvFullName"
            android:textColor="@color/color_6b7280"
            tools:text="0352183569"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditProfile"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
            android:layout_marginTop="@dimen/common_size_15dp"
            android:drawableStart="@drawable/ic_edit_profile"
            android:text="@string/string_edit_profile"
            android:textColor="@color/color_6b7280"
            android:drawableEnd="@drawable/ic_next_disabled"
            android:drawablePadding="@dimen/common_size_15dp"
            android:textSize="@dimen/common_text_size_18sp"
            />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvEditProfile"
            android:layout_marginTop="@dimen/common_size_10dp"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:background="@color/color_divider"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFavorite"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            android:layout_marginTop="@dimen/common_size_15dp"
            android:drawableStart="@drawable/ic_edit_profile"
            android:text="@string/string_favorite"
            android:textColor="@color/color_6b7280"
            android:drawableEnd="@drawable/ic_next_disabled"
            android:drawablePadding="@dimen/common_size_15dp"
            android:textSize="@dimen/common_text_size_18sp"
            />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvFavorite"
            android:layout_marginTop="@dimen/common_size_10dp"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:background="@color/color_divider"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditNotification"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            android:layout_marginTop="@dimen/common_size_15dp"
            android:drawableStart="@drawable/ic_edit_noti"
            android:text="@string/string_notification"
            android:textColor="@color/color_6b7280"
            android:drawableEnd="@drawable/ic_next_disabled"
            android:drawablePadding="@dimen/common_size_15dp"
            android:textSize="@dimen/common_text_size_18sp"
            />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvEditNotification"
            android:layout_marginTop="@dimen/common_size_10dp"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:background="@color/color_divider"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditSetting"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            android:layout_marginTop="@dimen/common_size_15dp"
            android:drawableStart="@drawable/ic_setting"
            android:text="@string/string_settings"
            android:textColor="@color/color_6b7280"
            android:drawableEnd="@drawable/ic_next_disabled"
            android:drawablePadding="@dimen/common_size_15dp"
            android:textSize="@dimen/common_text_size_18sp"
            />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvEditSetting"
            android:layout_marginTop="@dimen/common_size_10dp"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:background="@color/color_divider"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogout"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider4"
            android:layout_marginTop="@dimen/common_size_15dp"
            android:drawableStart="@drawable/ic_edit_profile"
            android:text="@string/string_log_out"
            android:textColor="@color/color_6b7280"
            android:drawableEnd="@drawable/ic_next_disabled"
            android:drawablePadding="@dimen/common_size_15dp"
            android:textSize="@dimen/common_text_size_18sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
